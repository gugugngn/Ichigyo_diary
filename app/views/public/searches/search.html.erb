<div class="container">
  <div class="card mx-auto mt-4 shadow-lg" style="max-width: 900px;">
    <% if @model == 'user' %>
      <div class ="mx-auto">
        <h3 class="p-3">ユーザーの検索結果 "<%= @content %>"</h3>
      </div>
      <% if @users.any? %>
        <% @users.each do |user| %>
          <div class="row justify-content-center py-3">
            <%= link_to user_path(user) do %>
              <%= render "public/users/name", user: user %>
            <% end %>
          </div>
        <% end %>
        <div class ="mx-auto">
          <%= paginate @users %>
        </div>
      <% else %>
      <div class ="mx-auto">
        <h4>該当するユーザーはいません</h4>
       </div>
      <% end %>
    <% elsif @model == 'post' %>
      <div class ="mx-auto">
        <h3 class="p-3">日記の検索結果 "<%= @content %>"</h3>
      </div>
      <% if @posts.any? %>
        <%= render "public/posts/mood_background_diaries", grouped_posts: @grouped_posts %>
        <div class ="mx-auto">
          <%= paginate @posts %>
        </div>
      <% else %>
      <div class ="mx-auto">
        <h4>該当する投稿はありません</h4>
      </div>
      <% end %>
    <% end %>
  </div>
</div>