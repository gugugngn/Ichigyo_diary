<div class="container">
  <div class="row justify-content-center">
    <%= render "public/shared/error_messages", resource: resource %>
  </div>
  <div class="row">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto text-center shadow-lg my-5">
      <h4 class="text-dark py-4">新規登録</h4>
      <div class="p-4">
        <div class="mx-auto text-center">
          <%= form_with model: @user, url: user_registration_path do |f| %>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-user"></i></span>
              </div>
              <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "form-control" %>
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-envelope"></i></span>
              </div>
              <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-lock"></i></span>
              </div>
              <%= f.password_field :password, placeholder: "パスワード(#{@minimum_password_length}文字以上)", class: "form-control" %>
            </div>
            <div class="input-group mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-circle-check"></i></span>
              </div>
              <%= f.password_field :password_confirmation, placeholder: "パスワード確認", class: "form-control" %>
            </div>
            <%= f.submit "新規登録", class: "btn btn-block btn-outline-info mt-5" %>
            <%= render "public/shared/links" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>