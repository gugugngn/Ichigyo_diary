<div id ="comments-error"></div>
<%= form_with(model:[post, comment], local: false) do |f| %>
  <div class="form-group">
    <%= f.text_area :body, rows:'3',placeholder: "コメントをここに", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "送信", class: 'btn btn-outline-secondary float-right' %>
  </div>
<% end %>