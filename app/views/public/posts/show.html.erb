
<div class="container">
  <div class="card mx-auto mt-4 shadow-lg" style="max-width: 900px;">
    <div class="row flex-nowrap">
      <div class="col-sm-4 col-md-2 m-3">
        <%= link_to user_path(@post.user) do %>
        <%= image_tag @post.user.get_profile_image(100,100), class: "rounded-circle" %>
      </div>
      <div class="col-sm-8 col-md-10 py-4">
        <p><%= l @post.created_at, format: :short %></p>
        <p><%= @post.user.name %></p>
        <% end %>
      </div>
    </div>
    <% if @post.post_image.attached? %>
      <%= image_tag @post.get_post_image(400, 300), class: "background-image"  %>
    <% end %>
    <div class="card-body">
      <div class="row justify-content-center">
        <div class="col-sm-12 col-md-10">
           <% if @post.user == current_user %>
            <p>次の日の自分へ　<%= @post.message %></p>
          <% end %>
          <%= render "public/posts/diary", post: @post %>
          <span>
            <div id="favorite_btn_<%= @post.id %>">
              <%= render "public/favorites/btn", post: @post %>
            </div>
          </span>
          <% if @post.user == current_user && @post.today_post? %>
            <div class="edit_btn"><%= link_to "編集", edit_post_path(@post), class: "btn btn-outline-secondary" %></div>
            <div class="delete_btn"><%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-outline-danger" %></div>
          <% elsif @post.user == current_user %>
            <p>過去の投稿は編集できません　<%= link_to "削除", post_path(@post), method: :delete, class: "btn btn-outline-danger" %></p>
          <% else %>
          <% end %>
          <div id="post-comments">
            <%= render "public/comments/index", post: @post %>
          </div>
          <div class="form-group">
          <%= render "public/comments/form", post: @post, comment: @comment %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>