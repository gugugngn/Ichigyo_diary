<% if post.post_image.attached? %>
  <!--色つき気分の名前-->
<div class="mx-auto px-2 mood-name">
  <% post.moods.each do |mood| %>
    <div class="d-inline-block mood-item" style="color: <%= mood.color %>;">
      <h5 class="d-block mood-name">
        <%= mood.name %>
      </h5>
    </div>
  <% end %>
</div>
  <!--写真背景の日記-->
  <div class="mx-auto">
    <%= link_to post_path(post) do %>
      <div class="mb-2 background-image-container">
        <%= image_tag post.get_post_image, class: "background-image" %>
        <div class="overlay-content">
          <p><%= l post.created_at, format: :long %>の<%= post.user.name %>さんの１行日記</p>
          <p><%= post.body %></p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <!--気分カラー背景の日記-->
  <%= link_to post_path(post) do %>
    <%= render "public/posts/mood_background_diary", post: post %>
  <% end %>
<% end %>

