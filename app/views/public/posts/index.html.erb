<h1>投稿一覧画面</h1>
<p>Find me in app/views/public/post/index.html.erb</p>
  <% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post) do %>
      <%= image_tag post.get_post_image(100,100) %>
    <% end %>
    <p>投稿本文<%= post.body %></p>
    <%= link_to user_path(post.user) do %>
      <%= post.user.name %>
    <% end %>
  </div>
   <% end %>
