<!--フォローするボタンとフォロー外すボタンの表示-->
<% if current_user.following?(user) %>
  <%= link_to user_relationships_path(user), method: :delete, class: "btn btn-light" do %>
    <p>フォローを外す</p>
  <% end %>
<% else %>
  <%= link_to user_relationships_path(user),method: :post, class: "btn btn-light" do %>
    <p>フォローする</p>
  <% end %>
<% end %>