<div class='container'>
  <div class='row'>
    <%= image_tag @user.get_profile_image(100, 100) %>

    <p><%= @user.name %></p>
    <p><%= @user.introduction %></p>
    
  </div>
  <div class='row'>
    <%= render "info", user: @user %>
  </div>
  <% @user.received_messages.each do |message| %>
    <%= message.message_text.content  %>
  <% end %>

  <%= render "public/messages/form", reciever: @user %>

</div>

