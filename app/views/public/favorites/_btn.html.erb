<% if post.favorited_by?(current_user) %>
  <%= link_to post_favorites_path(post.id), method: :delete, remote: true do %>
    <i class="fa-solid fa-seedling" style="color: #208604;"></i><%= post.favorites.count %> いいね
  <% end %>
<% else %>
  <%= link_to post_favorites_path(post.id), method: :post, remote: true do %>
    <i class="fa-solid fa-seedling" style="color: #808185;"></i><%= post.favorites.count %> いいね
  <% end %>
<% end %>