<div class='container'>
  <div class="card mx-auto mt-4 shadow-lg" style="max-width: 900px;">
    <div class="mx-auto py-4">
      <h4>ユーザー一覧</h4>
    </div>
    <% @users.each do |user| %>
      <div class="row justify-content-center py-3">
        <%= link_to admin_user_path(user) do %>
          <%= render "public/users/name",  user: user %>
        <% end %>
      </div>
    <% end %>
    <div class="row justify-content-center py-3">
      <%= paginate @users %>
    </div>
  </div>
</div>