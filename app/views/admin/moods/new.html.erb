<div class='container'>
  <div class="card mx-auto mt-4 shadow-lg" style="max-width: 900px;">
    <div class="mx-auto py-4">
      <div class="ml-3">
        <strong>気分一覧</strong>
      </div>
      <div class="d-flex flex-wrap mood-content">
        <% @moods.each do |mood| %>
          <p class="px-2">
            <span class="mood-color" style="background-color: <%= mood.color %>; ">
              <%= mood.name %>
            </span>
            <%= link_to "削除", admin_mood_path(mood), method: :delete, class: "btn btn-light m-1" %>
          </p>
        <% end %>
      </div>
      <%= form_with model: @mood, url: admin_moods_path, local: true do |f| %>
        <div class="ml-3">
          <strong><%= f.label :name, "新しい気分の作成" %></strong>
        </div>
        <div class="m-3">
          <%= f.text_area :name, class: 'form-control' %>
        </div>
        <div class="col-4">
          <%= f.color_field :color, class: 'form-control' %>
        </div>
        <div class="m-3">
          <%= f.submit class: 'btn btn-outline-dark' %>
        </div>
      <% end %>
    </div>
  </div>
</div>